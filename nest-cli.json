{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/api/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": false,
        "tsConfigPath": "apps/api/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "apps/api",
    "projects": {
        "api": {
            "type": "application",
            "root": "apps/api",
            "entryFile": "main",
            "sourceRoot": "apps/api/src",
            "compilerOptions": {
                "tsConfigPath": "apps/api/tsconfig.app.json"
            }
        },
        "database": {
            "type": "library",
            "root": "libs/database",
            "entryFile": "index",
            "sourceRoot": "libs/database/src",
            "compilerOptions": {
                "tsConfigPath": "libs/database/tsconfig.lib.json"
            }
        },
        "entity": {
            "type": "library",
            "root": "libs/entity",
            "entryFile": "index",
            "sourceRoot": "libs/entity/src",
            "compilerOptions": {
                "tsConfigPath": "libs/entity/tsconfig.lib.json"
            }
        },
        "swagger": {
            "type": "library",
            "root": "libs/swagger",
            "entryFile": "index",
            "sourceRoot": "libs/swagger/src",
            "compilerOptions": {
                "tsConfigPath": "libs/swagger/tsconfig.lib.json"
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "tsConfigPath": "libs/common/tsconfig.lib.json"
            }
        },
        "util": {
            "type": "library",
            "root": "libs/util",
            "entryFile": "index",
            "sourceRoot": "libs/util/src",
            "compilerOptions": {
                "tsConfigPath": "libs/util/tsconfig.lib.json"
            }
        }
    }
}
