{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/api/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": false,
        "tsConfigPath": "apps/api/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "apps/api",
    "projects": {
        "api": {
            "type": "application",
            "root": "apps/api",
            "entryFile": "main",
            "sourceRoot": "apps/api/src",
            "compilerOptions": {
                "tsConfigPath": "apps/api/tsconfig.app.json"
            }
        },
        "admin": {
            "type": "application",
            "root": "apps/admin",
            "entryFile": "main",
            "sourceRoot": "apps/admin/src",
            "compilerOptions": {
                "tsConfigPath": "apps/admin/tsconfig.app.json"
            }
        }
    }
}
